  <div class="row">
    <div class="col-lg-12 main-content">
      <div class="col-lg-6">
        <h1><%= best_in_place @blog, :title, :as => :input, :place_holder => "Click me to add content!" %></h1>
      </div>
      <div class="col-lg-6">
        <%= form_for @blog, remote: true do |f| %>
          <div class="col-lg-6">
            <div class="form-group">
              <label for="sel1">Change Color:</label>
              <%= f.text_field :color, value: @blog.color.blank? ? '#333' : @blog.color,  class: "colorpicker form-control" %>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="form-group">
              <label for="sel1">Font Size:</label>
              <%= f.select(:font_size, 1..20, {selected: @blog.font_size.blank? ? 13 : @blog.font_size}, class: "form-control") %>
            </div>
          </div>
        <% end %>
